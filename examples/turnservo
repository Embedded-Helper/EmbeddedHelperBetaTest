// Include Servo library 

#include <Servo.h> 

// set the pin 

int servoPin = 3; 

// Create a servo object 
Servo Servo1; 

void setup() { 
   // attach the pin number
   
   Servo1.attach(servoPin); 
}

void loop(){ 

   // servo 0 degrees
   
   Servo1.write(0); 
   
   delay(1000); 
   
   // servo 90 degrees
   
   Servo1.write(90);
   
   delay(1000); 
   
   // servo 180 degrees 
   
   Servo1.write(180); 
   
   delay(1000); 
}
